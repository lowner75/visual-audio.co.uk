//- views/includes/scripts.pug

//- ========================
//- Vendor JS
//- ========================

//- jQuery (for legacy script support)
script(src="/js/vendor/jquery.min.js")

//- Bootstrap (bundle includes Popper)
script(src="/js/vendor/bootstrap.bundle.min.js")

//- GSAP animations
script(src="/js/vendor/gsap.min.js")

//- Luxy smooth scroll
script(src="/js/vendor/luxy.min.js")

//- Fancybox for image lightboxes
script(src="/js/vendor/jquery.fancybox.min.js")

//- ========================
//- Page-specific scripts
//- ========================

block scripts
  if pageScripts
    each src in pageScripts
      script(src=src)

//- ========================
//- Vite helper (bundled frontend JS)
//- ========================

!= viteScript()