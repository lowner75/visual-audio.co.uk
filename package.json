{
  "name": "visual-audio",
  "version": "1.0.0",
  "description": "visual-audio.co.uk â€“ A Fastify + TypeScript project powering a visual audio website, featuring a frontend that includes visual audio hire, and a backend admin management system for product and user management.",
  "main": "index.js",
  "type": "commonjs",
  "author": "Bryan Lown",
  "scripts": {
    "server": "ts-node-dev src/server.ts",
    "sass:watch": "sass --watch scss/styles-legacy.scss:public/css/styles-legacy.min.css --style=compressed",
    "vite:build": "vite build",
    "esbuild:dev": "esbuild src/main.ts --bundle --outdir=public/js --watch",
    "dev": "concurrently \"npm run server\" \"npm run esbuild:dev\" \"npm run sass:watch\"",
    "build:server": "tsc --project tsconfig.json",
    "build:client": "vite build && sass scss/styles-legacy.scss:public/css/styles-legacy.min.css --style=compressed",
    "build": "cross-env NODE_ENV=production npm run build:server && npm run build:client",
    "start": "cross-env NODE_ENV=production node dist/server.js"
  },
  "dependencies": {
    "@fancyapps/fancybox": "^3.5.7",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/static": "^8.3.0",
    "@fastify/view": "^11.1.1",
    "@types/bootstrap": "^5.2.10",
    "argon2": "^0.44.0",
    "bootstrap": "^5.3.8",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "gsap": "^3.13.0",
    "jsonwebtoken": "^9.0.3",
    "luxy.js": "^0.1.0",
    "mongoose": "^8.19.3",
    "nodemailer": "^7.0.10",
    "pino": "^10.1.0",
    "pug": "^3.0.3",
    "sass": "^1.94.0",
    "ssh2-sftp-client": "^12.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/argon2": "^0.14.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/pug": "^2.0.10",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  }
}
